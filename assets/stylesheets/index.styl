@import 'base_view'

$casto-font       = 'Source Code Pro', Verdana, "游ゴシック", YuGothic, "Hiragino Kaku Gothic ProN", Meiryo, sans-serif
$casto-green      = #4FD093
$casto-green-dark = #009564

*, *:before, *:after
  box-sizing: border-box

html
  height: 100%

  textarea:focus,
  input:focus
    outline: 0

  body
    height: 100%
    background-color: whitesmoke
    padding: 0
    margin: 0

    div
      height: 100%

    #content
      height: 100%

      #editor
        font-family: $casto-font
        font-weight: 300
        overflow: scroll
        position: relative
        overflow: scroll
        background-color: #222
        font-size: 14px
        color: #ccc
        border: 0
        width: 100%
        height: 100%

        &.over
          color: $casto-green
          .ace_content span
            color: $casto-green
#menu
  position: fixed
  height: 20px
  background-color: $casto-green
  z-index: 99999
  bottom: 0
  padding: 0 10px 0 10px
  line-height: 20px
  font-size: 12px
  color: #222
  width: 100%
  .powerd
    float: right
    font-weight: 300
    color: $casto-green-dark
    a
      color: $casto-green-dark
      text-decoration: none
  ol
    display: inline-block
    padding: 0
    margin: 0
    li
      &:first-child
        background-color: $casto-green-dark
        color: #eee
        font-weight: 300
      font-family: $casto-font
      font-weight: 700
      margin: 0
      padding: 0 10px 0 10px
      display: table-cell
